<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.RegisterActivity">

    <TextView
        android:id="@+id/Logo_Register"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Register"
        android:textSize="60dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-41dp" />

    <TextView
        android:id="@+id/Register_Tv1"
        android:layout_width="114dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:text="Name"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/Logo_Register" />

    <EditText
        android:id="@+id/ReEt_Et1"
        android:layout_width="293dp"
        android:layout_height="48dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintBottom_toBottomOf="@id/Register_Tv1"
        app:layout_constraintLeft_toRightOf="@id/Register_Tv1"
        app:layout_constraintTop_toTopOf="@id/Register_Tv1" />

    <TextView
        android:id="@+id/Register_Tv2"
        android:layout_width="114dp"
        android:layout_height="54dp"
        android:text="Email"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/Register_Tv1" />

    <EditText
        android:id="@+id/ReEt_Et2"
        android:layout_width="293dp"
        android:layout_height="47dp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintBottom_toBottomOf="@id/Register_Tv2"
        app:layout_constraintLeft_toRightOf="@id/Register_Tv2"
        app:layout_constraintTop_toTopOf="@id/Register_Tv2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/Register_Tv2"
        tools:ignore="MissingConstraints">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Educator" />

            <RadioButton
                android:id="@+id/radio_button_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Learner" />

        </RadioGroup>

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="Educator" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="Learner" />
    </LinearLayout>

    <TextView
        android:id="@+id/Register_Tv3"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:layout_marginTop="104dp"
        android:text="Password"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/Register_Tv2"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/ReEt_Et3"
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:background="@android:drawable/edit_text"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@id/Register_Tv3"
        app:layout_constraintLeft_toRightOf="@id/Register_Tv3"
        app:layout_constraintTop_toTopOf="@id/Register_Tv3" />

    <TextView
        android:id="@+id/Register_Tv4"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:text="Confirm Password"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/Register_Tv3"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/ReEt_Et4"
        android:layout_width="266dp"
        android:layout_height="36dp"
        android:background="@android:drawable/edit_text"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@id/Register_Tv4"
        app:layout_constraintLeft_toRightOf="@id/Register_Tv4"
        app:layout_constraintTop_toTopOf="@id/Register_Tv4" />

    <Button
        android:id="@+id/Bt_Register"
        android:layout_width="410dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:background="@color/teal_700"
        android:text="Register"
        app:layout_constraintTop_toBottomOf="@id/ReEt_Et4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>